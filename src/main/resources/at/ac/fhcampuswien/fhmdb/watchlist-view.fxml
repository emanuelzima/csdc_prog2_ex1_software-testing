<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXListView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="331.0" prefWidth="570.0" xmlns="http://javafx.com/javafx/15.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="at.ac.fhcampuswien.fhmdb.WatchlistController">

    <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: black;">
        <padding>
            <Insets top="10" bottom="10" left="10" right="10"/>
        </padding>
        <children>
            <Label style="-fx-background-color: F5C518;" text="FHMDb">
                <font>
                    <Font name="Calibri Bold" size="24.0" />
                </font>
                <padding>
                    <Insets left="2.0" right="2.0" />
                </padding>
            </Label>
            <Label styleClass="text-white" stylesheets="@styles.css" text="Welcome to FHMDb!" />
            <JFXButton fx:id="homeBtn"
                       text="Home"
                       styleClass="background-yellow"
                       stylesheets="@styles.css" />
        </children>
    </HBox>

    <Label text="My Watchlist" styleClass="text-yellow" stylesheets="@styles.css">
        <font>
            <Font name="Calibri Bold" size="24.0"/>
        </font>
        <VBox.margin>
            <Insets left="10.0" top="10.0"/>
        </VBox.margin>
    </Label>

    <JFXListView fx:id="movieListView"
                 styleClass="background-black"
                 style="-fx-background-color: black;"
                 VBox.vgrow="ALWAYS"
                 stylesheets="@styles.css" />
</VBox>
